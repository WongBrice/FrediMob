<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.m2l.sio.fredimob">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logofredi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logofredi"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Controller.Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.Connection.DialogChangePassword"
            android:label="@string/title_activity_dialog_change_password"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>